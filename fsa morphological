def pluralize_noun(noun):
    if noun.endswith('y'):
        return noun[:-1] + 'ies'
    elif noun.endswith(('s', 'x', 'z', 'ch', 'sh')):
        return noun + 'es'
    else:
        return noun + 's'

print(pluralize_noun("dog"))    # dogs
print(pluralize_noun("cat"))    # cats
print(pluralize_noun("box"))    # boxes
print(pluralize_noun("church")) # churches
